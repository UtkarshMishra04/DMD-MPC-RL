<mujoco model='dclaw3xh_valve3'>
    <include file='../../../env_models/scenes/basic_scene.xml' />
    <include file='../../../env_models/dclaw/assets/dependencies3xh.xml' />
    <include file='../../../env_models/dclaw/dclaw_stations/dependencies.xml' />
    <compiler meshdir='../../../env_models/dclaw' texturedir="../../../env_models/dclaw"/>

    <worldbody>

        <!-- camera -->
		<camera name='targeting' pos='1 1 2' mode='targetbodycom' target='dClaw'/>

        <!-- dclaw mount + overlay -->
		<body name='mount' pos='0 0 .335' euler='0 0 0'>
            <geom name='mount' type="cylinder" size='0.03 0.005' rgba='.7 .7 .7 1'/>
	        <include file='../../../env_models/dclaw/assets/chain3xh.xml'/>
	        <include file='../../../env_models/dclaw/assets/chain3xh_overlay.xml'/>
	    </body>

        <!-- the valve -->
        <body name="object" pos="0 0 0.0001">
            <include file='../../../env_models/dclaw/assets/valve3.xml'/>
        </body>

        <!-- green mark for the target -->
        <body name="target" pos="0 0 0" >
            <site name="tmark" type='capsule' size='.003 0.04' pos='.04 0 0' rgba='0 1 0 1' euler='0 1.57 0'/>
        </body>

    </worldbody>

</mujoco>
